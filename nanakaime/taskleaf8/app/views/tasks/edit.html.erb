
<%= form_tag("/tasks/"+@task.id.to_s,:method=>:patch) do %>
        <h2>個人情報登録の編集</h2>
	 	<div class="form-group">
         <label for="task_name">お名前</label>
		 <input placeholder="お名前"  class="form-control" id="task_name" type="text" name="task[name]" />

		</div>

		<div class="form-group">
         <label for="task_description">詳しい内容</label>
		 <textarea placeholder="ご説明" class="form-control" id="task_description" type="text" name="task[description]">
		 </textarea>
		</div>

		<div class="form-group">
		 <input type="submit" name="commit" value="更新する" class="btn btn-primary" data-disable-with="更新する" />
		</div>
<% end %>
