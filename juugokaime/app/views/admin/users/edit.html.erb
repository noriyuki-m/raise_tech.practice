<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <h2>管理者用画面：ユーザー登録</h2>
  <div class="form-group">
	  <%= f.label :name, "Name" %>
	  <%= f.text_field :name, id:"user_name", class:"form-control", value:@user.name %>
　</div>　
  <div class="form-group">
	  <%= f.label :email, "メールアドレス " %>
	  <%= f.text_field :email, id:"user_email", class:"form-control", value:@user.email  %>
　</div>　
　<div class="form-group">
      <%= f.submit "更新する", class:"btn btn-primary" %>
　</div>
<% end %>

